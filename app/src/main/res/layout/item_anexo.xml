<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvNomeAnexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btnRemoverAnexo"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:fontFamily="@font/lato"
        tools:text="Emenda do Processo Teste.pdf" />

    <TextView
        android:id="@+id/tvDataAnexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNomeAnexo"
        android:layout_alignStart="@id/tvNomeAnexo"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        tools:text="19/07/2023" />

    <TextView
        android:id="@+id/tvUsuarioAnexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNomeAnexo"
        android:layout_alignStart="@id/tvNomeAnexo"
        android:layout_marginTop="16dp"
        android:paddingStart="210dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        tools:text="UsuÃ¡rio" />

    <ImageButton
        android:id="@+id/btnAbrirAnexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/btnRemoverAnexo"
        android:background="@drawable/shape_button_rounded"
        android:padding="12dp"
        android:src="@drawable/ic_baseline_download_24" />

    <ImageButton
        android:id="@+id/btnRemoverAnexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_delete_24dp"
        android:background="@drawable/shape_button_rounded"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:padding="12dp" />

</RelativeLayout>
