<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/criar_processo"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/numero_processo_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/numero_processo" />

        <EditText
            android:id="@+id/nome_processo_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nome_processo" />

        <EditText
            android:id="@+id/descricao_processo_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/descricao_processo" />

        <DatePicker
            android:id="@+id/data_abertura_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false" />

        <EditText
            android:id="@+id/status_processo_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/status_processo" />

        <DatePicker
            android:id="@+id/data_movimentacao_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false" />

        <EditText
            android:id="@+id/tarefa_pendente_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tarefa_pendente" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arquivo_processo"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/selecionar_arquivo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selecionar_arquivo" />

        <Button
            android:id="@+id/salvar_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/salvar" />

    </LinearLayout>
</ScrollView>
