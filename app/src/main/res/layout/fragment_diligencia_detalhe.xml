<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ProcessoDetalheFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/screenContentMarginTop"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/cardViewElevation"
                app:cardCornerRadius="@dimen/cardViewCornerRadius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/cardViewLayoutContentPadding">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etDiligenciaDescricao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/diligenciaDescricao"
                            android:inputType="text"
                            android:textSize="@dimen/etTextSize" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/labelTipoDiligencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/processoCadastroTilMarginTop"
                        android:gravity="start"
                        android:text="@string/hintTipoDiligenciaDescription"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="@dimen/etTextSize"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerTipoDiligencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/spinnerBackground"
                        android:spinnerMode="dropdown" />

                    <TextView
                        android:id="@+id/labelStatusDiligencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/processoCadastroTilMarginTop"
                        android:gravity="start"
                        android:text="@string/hintStatusDiligenciaDescription"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="@dimen/etTextSize"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerStatusDiligencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/spinnerBackground"
                        android:spinnerMode="dropdown" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/diligenciaDetalheScreenTilMarginTop">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etDiligenciaData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/hintDataDiligenciaDescription"
                            android:inputType="text"
                            android:textSize="@dimen/etTextSize" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/diligenciaDetalheScreenTilMarginTop">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etDiligenciaProcesso"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/selecionarProcesso"
                            android:inputType="text"
                            android:textSize="@dimen/etTextSize" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/diligenciaDetalheScreenTilMarginTop">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etDiligenciaAdvogado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hintDiligenciaAdvogado"
                            android:inputType="text"
                            android:textSize="@dimen/etTextSize" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/diligenciaDetalheScreenTilMarginTop">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/etDiligenciaEndereco"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="@string/hintDiligenciaEndereco"
                                android:inputType="text"
                                android:textSize="@dimen/etTextSize"
                                android:background="?attr/colorControlHighlight"
                                style="@style/TextInputLayoutStyle" />

                            <ImageButton
                                android:id="@+id/btnGoogleMaps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape_button_rounded"
                                android:contentDescription="Google Maps"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                android:src="@drawable/ic_baseline_place_24" />

                        </LinearLayout>
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnAtualizarDiligencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/btnBtnMarginTop"
                        android:background="@drawable/shape_button_rounded"
                        android:foreground="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:paddingTop="@dimen/btnPaddingTopBottom"
                        android:paddingBottom="@dimen/btnPaddingTopBottom"
                        android:text="@string/update"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/btnTextSize" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </ScrollView>

    </LinearLayout>

</LinearLayout>